{
  "name": "url-parser",
  "version": "1.0.0",
  "description": "Chrome plugin for parsing urls",
  "main": "popup.js",
  "scripts": {
    "test": "jest",
    "build": "rm -rf dist && webpack",
    "build:watch": "rm -rf dist && webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nvignola/url-parser.git"
  },
  "author": "Nicolantonio Vignola",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nvignola/url-parser/issues"
  },
  "homepage": "https://github.com/nvignola/url-parser#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-inline-imports-commonjs": "^1.2.0",
    "babel-preset-env": "^1.6.0",
    "codecov": "^3.6.1",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^1.0.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-plugin-import": "^2.18.2",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "jsdom": "^15.1.1",
    "jsdom-mount": "^0.1.0",
    "mini-css-extract-plugin": "^0.8.0",
    "svg-inline-loader": "^0.8.0",
    "webpack": "^4.16.5",
    "webpack-command": "^0.4.1"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageReporters": [
      "html",
      "text"
    ],
    "moduleDirectories": [
      "node_modules",
      "."
    ],
    "modulePaths": [
      "<rootDir>",
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "moduleNameMapper": {
      "\\.(svg)$": "<rootDir>/__mocks__/fileMock.js",
      "~/src(.*)$": "<rootDir>/$1"
    },
    "testEnvironment": "jsdom",
    "transformIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "testRegex": "(\\.|/)test\\.js$"
  }
}
